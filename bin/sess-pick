#!/bin/bash

choice=$(whiptail --notags --menu "Pick a session" 30 70 $(($(tmux ls | wc -l) + 1)) $(tmux ls -F "#{session_name} #{session_name}") "New" "New" 3>&1 1>&2 2>&3)

if [ -z "$choice" ]; then
	exec bash -i
elif [ "$choice" = "New" ]; then
	exec tmux new -s "$(whiptail --inputbox "New session name" 20 50 3>&1 1>&2 2>&3)" /bin/bash -i
else
	exec tmux attach -t $choice
fi
